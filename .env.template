# Stand Up Sydney MCP Business Tools Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Notion Configuration
# Get from: https://developers.notion.com/docs/create-a-notion-integration
NOTION_API_KEY=secret_your_notion_integration_token_here

# GitHub Configuration  
# Get from: https://github.com/settings/tokens
# Permissions needed: repo, admin:org, user, project
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_github_personal_access_token_here

# Metricool Configuration
# Get from: https://metricool.com/api/
METRICOOL_USER_TOKEN=your_metricool_user_token_here
METRICOOL_USER_ID=your_metricool_user_id_here

# Google Drive Configuration (Optional)
# Service account JSON file path will be mounted as volume
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/gdrive-service-account.json

# MCP Gateway Configuration
MCP_GATEWAY_PORT=8000
MCP_GATEWAY_HOST=0.0.0.0

# Network Configuration
COMPOSE_PROJECT_NAME=standup_sydney_mcp

# Logging Configuration
COMPOSE_LOG_LEVEL=INFO